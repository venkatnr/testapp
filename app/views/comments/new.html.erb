(<%= link_to "back to create new article", new_article_path  %>)<br>
(<%=link_to "back to all comments for this article", article_path(:id => @article.id)%>)<br>
Title: <%= @article.title %>
Description: <%= @article.description %>
<%= form_for @comment, :url => {:action => :create, :id => @article.id} do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :commentonarticle %><br />
    <%= f.text_area :commentonarticle %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Back', comments_path %>
